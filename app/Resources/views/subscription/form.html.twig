{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-4">
            <form action="{{ path('save_subscriber') }}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="categories">Categories</label>
                    <select multiple name="categories[]" id="categories" class="form-control">
                        {% for category in categories %}
                            <option value="{{ category }}">{{ category }}</option>
                        {% endfor %}
                    </select>

                </div>
                <button class="btn btn-default" id="submit">Submit</button>
            </form>
        </div>
    </div>

    {% block javascripts %}
        <script>
            var saveSubscriberUrl = "{{ path('save_subscriber') }}";
        </script>
        <script src="{{ asset('our/js/form.js') }}" type="text/javascript"></script>
    {% endblock %}

{% endblock %}
